<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>cmd</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/bash</directory>
            <outputDirectory>solr-cmd-utils/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>request-counter</include>
                <include>solr-*</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>solr-cmd-utils/lib</outputDirectory>
            <includes>
                <include>*jar-with-dependencies.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>